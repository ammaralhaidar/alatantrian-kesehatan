---
import type { Stats as Props } from '~/types';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import { Icon } from 'astro-icon/components';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  stats = [],

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-6xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />
  <div class="flex flex-wrap justify-center -m-4 text-center">
    {
      stats &&
        stats.map(({ amount, title, icon }) => (
          <div class="p-4 md:w-1/4 sm:w-1/2 w-full min-w-[220px] text-center md:border-r md:last:border-none dark:md:border-slate-500 intersect-once motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade intersect-quarter">
            {icon && (
              <div class="flex items-center justify-center mx-auto mb-4 text-primary">
                <Icon name={icon} class="w-10 h-10" />
              </div>
            )}
            {amount && (
              <div class="font-heading text-primary text-[2.6rem] font-bold dark:text-white lg:text-5xl xl:text-6xl">
                <span class="counter-item">{amount}</span>
              </div>
            )}
            {title && (
              <div class="text-sm font-medium uppercase tracking-widest text-gray-800 dark:text-slate-400 lg:text-base">
                {title}
              </div>
            )}
          </div>
        ))
    }
  </div>
</WidgetWrapper>
<script>
  const runCounter = () => {
    // Tambahkan 'as NodeListOf<HTMLElement>' untuk mengatasi error TypeScript
    const counters = document.querySelectorAll('.counter-item') as NodeListOf<HTMLElement>;
    const speed = 2000;

    counters.forEach((counter) => {
      // Gunakan textContent, lebih aman daripada innerText
      const originalText = counter.textContent || '';

      // REGEX BARU: Memisahkan (Prefix)(Angka)(Suffix)
      // Contoh "24/7" -> Prefix: "", Angka: "24", Suffix: "/7"
      // Contoh "Rp 50jt" -> Prefix: "Rp ", Angka: "50", Suffix: "jt"
      const match = originalText.match(/^(\D*)(\d+)(.*)$/);

      // Jika tidak ada angka sama sekali, biarkan apa adanya
      if (!match) return;

      const prefix = match[1]; // Simbol di depan angka
      const target = parseInt(match[2]); // Angka utama yang akan dihitung
      const suffix = match[3]; // Simbol di belakang angka (termasuk /7)

      let count = 0;
      const inc = target / (speed / 20);

      const updateCount = () => {
        if (count < target) {
          count += inc;
          // Render: Prefix + Angka Berjalan + Suffix
          counter.textContent = prefix + Math.ceil(count) + suffix;
          setTimeout(updateCount, 20);
        } else {
          // Pastikan angka akhir sesuai aslinya
          counter.textContent = originalText;
        }
      };

      updateCount();
    });
  };

  document.addEventListener('astro:page-load', () => {
    const section = document.querySelector('.counter-item');
    if (!section) return;

    const observer = new IntersectionObserver(
      (entries) => {
        if (entries[0].isIntersecting) {
          runCounter();
          observer.disconnect();
        }
      },
      { threshold: 0.5 }
    );

    observer.observe(section);
  });
</script>
