---
import { Icon } from 'astro-icon/components';
import type { Brands as Props } from '~/types';
import Image from '~/components/common/Image.astro';
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';

const {
  title = '',
  subtitle = '',
  tagline = '',
  icons = [],
  images = [],
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-full mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />

  <div class="relative flex overflow-x-hidden group">
    <div class="animate-marquee flex items-center gap-12 whitespace-nowrap py-4">
      {
        images &&
          images.map(
            (image) =>
              image.src && (
                <div class="flex justify-center items-center mx-4 min-w-[150px]">
                  <Image
                    src={image.src}
                    alt={image.alt || ''}
                    class="max-h-12 opacity-80 hover:opacity-100 transition-opacity duration-300"
                    width={150}
                    height={48}
                    layout="fixed"
                    style="object-fit: contain;"
                  />
                </div>
              )
          )
      }

      {/* Tampilkan Icons jika ada */}
      {icons && icons.map((icon) => <Icon name={icon} class="mx-4 w-12 h-auto text-gray-500" />)}

      {
        images &&
          images.map(
            (image) =>
              image.src && (
                <div class="flex justify-center items-centerMx-4 min-w-[150px]">
                  <Image
                    src={image.src}
                    alt={image.alt || ''}
                    class="max-h-12 opacity-80 hover:opacity-100 transition-opacity duration-300"
                    width={150}
                    height={48}
                    layout="fixed"
                    style="object-fit: contain;"
                  />
                </div>
              )
          )
      }
      {icons && icons.map((icon) => <Icon name={icon} class="mx-4 w-12 h-auto text-gray-500" />)}
    </div>
  </div>
</WidgetWrapper>

<style>
  .animate-marquee {
    animation: marquee 40s linear infinite;
  }

  /* Animasi berjalan dari 0% ke -50% (setengah panjang track karena ada 2 set logo) */
  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
</style>
